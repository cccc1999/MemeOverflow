<div class="leaderboard pull-left">
  <h2>The Leaderboard</h2>
  <p>Top 10 users</p>
  <table>
    <tr>
      <th>#</th>
      <th>User</th>
      <th>Score</th>
    </tr>
  <% @leaders.each_with_index do |leader, index| %>
    <tr>
      <td><%= index+1 %>. </td>
      <td><%= link_to leader.full_name, leader %></td> 
      <td class ="leaderscore"><%= leader.score %></td>
    </tr>
  <% end %>
  </table>
</div>
